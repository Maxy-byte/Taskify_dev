{% extends 'base.html.twig' %}

{% block body %}
{#
<div class="text-5xl text-center font-bold"> {{ task.title }}
</div><br/>
<div>
    <ul class="ml-[10px] mr-[10px]">
        <li>
            <label class="flex items-start gap-2"> Aufgabenname </label>
            <input
                    class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-[100%]"
                    value="{{ task.title }}"
                    name="editTaskName"
                    id="editTaskName"/>
        </li>
        <br/>
        <li>
            <label class="flex items-start gap-2"> Zeitraum </label>
            <input type="date"
                   id="editTaskTimesheet"
                   name="editTaskTimesheet"
                   min="2020-01-01"
                   max="2030-12-31"
                   class="border px-3 py-2 rounded w-[100%]"
                   value="{{ task.timesheet ? task.timesheet|date('Y-m-d') : '' }}"/>
        </li>
        <br/>
        <li>
            <label class="flex items-start gap-2"> Priorität </label>
            <input type="number"
                   id="editTaskPriority"
                   name="editTaskPriority"
                   min="0"
                   max="4"
                   class="border px-3 py-2 rounded w-[100%]"
                   value="{{ task.priority }}"/>
        </li>
        <br/>
        <li>
            <label class="flex items-start gap-2"> Aufgabeninformationen </label>
            <textarea
                    class="border border-gray-300 rounded p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-[100%] h-[550px] resize-none inline-block"
                    name="editTaskInfo"
                    id="editTaskInfo">{{ task.Info }}</textarea>
        </li>
    </ul>
</div>
{% endblock %}
{% block footer %}
<div class="ml-[10px] flex gap-4">
    <button
            class="flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-full py-2 px-5 shadow transition duration-200"
            hx-include="#editTaskName, #editTaskTimesheet, #editTaskInfo, #editTaskPriority"
            hx-post="{{ path('submit', {id: task.id}) }}"
    >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Übernehmen
    </button>

    <a href="{{ path('task_list') }}">
        <button
                class="flex items-center gap-2 bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium rounded-full py-2 px-5 transition duration-200"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                 stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Abbrechen
        </button>
    </a>
</div>#}
{% endblock %}